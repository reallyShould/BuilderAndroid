<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333333">
    <ImageButton
        android:id="@+id/menuButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Menu"
        android:src="@drawable/ic_menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#FFFFFF" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/menuButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/formContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:elevation="4dp"
            android:orientation="vertical"
            android:padding="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.0">
            <!--Motherboard-->
            <TextView
                android:id="@+id/titleMB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Icon + MB name"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mbSocket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Socket"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/mbRamType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RAM Type"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/mbSlots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RAM Slots"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/mbMaxRam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Max RAM"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/mbRamFreq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RAM Freq"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/mbForm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Form-factor"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/mbPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textColor="#000000"
                android:textSize="16sp" />
            <!--CPU-->
            <TextView
                android:id="@+id/titleCPU"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Icon + CPU name"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cpuCores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cores"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/cpuSocket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Socket"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/cpuTDP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TDP"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/cpuPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textColor="#000000"
                android:textSize="16sp" />
            <!--GPU-->
            <TextView
                android:id="@+id/titleGPU"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Icon + GPU name"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/gpuBench"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bench"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/gpuTDP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TDP"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/gpuPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textColor="#000000"
                android:textSize="16sp" />
            <!-- RAM -->
            <TextView
                android:id="@+id/titleRAM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Icon + RAM name"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ramCapacity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Capacity"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/ramType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/ramCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Count"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/ramFreq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Freq"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/ramTimings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Timings"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/ramPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textColor="#000000"
                android:textSize="16sp" />
            <!-- ROM -->
            <TextView
                android:id="@+id/titleROM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Icon + ROM name"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/romCapacity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Capacity"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/romBench"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bench"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/romPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textColor="#000000"
                android:textSize="16sp" />
            <!-- PSU -->
            <TextView
                android:id="@+id/titlePSU"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Icon + PSU name"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/psuForm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Form-factor"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/psuPin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PIN"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/psuPower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Power"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/psuPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textColor="#000000"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>